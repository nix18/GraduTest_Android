<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_gravity="center"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        app:cardMaxElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/habit_name_textview_my_habits"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="sample" />

            <TextView
                android:id="@+id/habit_category_textview_my_habits"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="sample" />

            <TextView
                android:id="@+id/habit_heat_textview_my_habits"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="sample" />

            <TextView
                android:id="@+id/habit_isvisible_textview_my_habits"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="sample" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/text_hid_fm_square"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:visibility="invisible" />

</LinearLayout>
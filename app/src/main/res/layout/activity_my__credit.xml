<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="vertical"
    tools:context=".My_Credit_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_back_my_credit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:src="@mipmap/ic_back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_weight="10"
            android:gravity="center"
            android:text="我的积分"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/img_more_info_my_credit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:src="@mipmap/ic_more_info" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.35"
            android:orientation="horizontal">

            <Space
                android:layout_width="10dp"
                android:layout_height="wrap_content" />

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/orange"
                app:cardCornerRadius="20dp">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:alpha="0.3"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:translationX="190dp"
                    app:srcCompat="@drawable/___84_2" />

                <TextView
                    android:id="@+id/text_credit_sum_my_credit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="积分总数"
                    android:textColor="@color/light_orange"
                    android:textSize="18sp"
                    android:translationX="30dp"
                    android:translationY="20dp" />

                <TextView
                    android:id="@+id/credit_sum_my_credit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9999"
                    android:textColor="@color/white"
                    android:textSize="66sp"
                    android:textStyle="bold"
                    android:translationX="30dp"
                    android:translationY="45dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/credit_list_my_credit"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:alpha="0.9"
                    android:background="@color/orange"
                    android:clickable="true"
                    android:focusable="auto"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:translationX="30dp"
                    android:translationY="140dp"
                    app:cardBackgroundColor="#FFC36B"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:cardMaxElevation="0dp">

                    <TextView
                        android:id="@+id/text_credit_list_my_credit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="积分明细"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>

            </androidx.cardview.widget.CardView>

            <Space
                android:layout_width="10dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:orientation="horizontal">

            <Space
                android:layout_width="10dp"
                android:layout_height="wrap_content" />

            <androidx.cardview.widget.CardView
                android:id="@+id/clock_in_btn_my_credit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/transparent"
                app:cardElevation="0dp"
                app:cardMaxElevation="0dp">

                <TextView
                    android:id="@+id/text_clock_in_btn_my_credit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="每日签到"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:translationX="38dp"
                    android:translationY="95dp" />

                <ImageView
                    android:id="@+id/img_clock_in_btn_my_credit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleX="0.4"
                    android:scaleY="0.4"
                    app:srcCompat="@drawable/___178" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/credit_exchange_btn_my_credit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/transparent"
                app:cardElevation="0dp"
                app:cardMaxElevation="0dp">

                <TextView
                    android:id="@+id/text_credit_exchange_btn_my_credit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="积分兑换"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:translationX="38dp"
                    android:translationY="95dp" />

                <ImageView
                    android:id="@+id/img_credit_exchange_btn_my_credit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleX="0.4"
                    android:scaleY="0.4"
                    app:srcCompat="@drawable/____40" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/credit_lottery_btn_my_credit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/transparent"
                app:cardElevation="0dp"
                app:cardMaxElevation="0dp">

                <TextView
                    android:id="@+id/text_credit_lottery_btn_my_credit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="积分抽奖"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:translationX="38dp"
                    android:translationY="95dp" />

                <ImageView
                    android:id="@+id/img_credit_lottery_btn_my_credit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleX="0.4"
                    android:scaleY="0.4"
                    app:srcCompat="@drawable/___27" />
            </androidx.cardview.widget.CardView>

            <Space
                android:layout_width="10dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="horizontal"></LinearLayout>
    </LinearLayout>

</LinearLayout>